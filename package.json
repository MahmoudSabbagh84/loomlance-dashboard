{
  "name": "loomlance-dashboard",
  "version": "1.0.0",
  "type": "module",
  "description": "All-in-one freelancer hub for invoices, contracts, and clients",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "build:prod": "NODE_ENV=production vite build",
    "deploy:aws": "npm run build:prod && aws s3 sync dist/ s3://loomlance-dashboard-prod --delete",
    "deploy:staging": "deploy-aws.bat staging",
    "deploy:production": "deploy-aws.bat production",
    "aws:configure": "aws configure",
    "aws:status": "aws sts get-caller-identity"
  },
  "dependencies": {
    "aws-sdk": "^2.1691.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "terser": "^5.36.0",
    "vite": "^6.0.1"
  }
